  <header class="page-header">
    <h1>All Categories</h1>
  </header>

  <div class="well">
  <%= link_to "Create Category", [ :new, :admin, :category], class: "btn btn-info" %>
  </div>
  
  <div class="panel panel-default">
    <table class="table table-bordered">

      <thead>
        <tr>
          <h3><th>Current Category</th></h3>
        </tr>
      </thead>
      <tbody>
      <%= render @categories %>
      </table>
      </tbody>
    </table>
  </div>
</section>
